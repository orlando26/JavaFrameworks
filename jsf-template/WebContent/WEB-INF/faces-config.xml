<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
     <managed-bean>
		<managed-bean-name>SessionContext</managed-bean-name>
		<managed-bean-class>com.jsftemplate.context.SessionContext</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>RequestContext</managed-bean-name>
		<managed-bean-class>com.jsftemplate.context.RequestContext</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>ApplicationContext</managed-bean-name>
		<managed-bean-class>com.jsftemplate.context.ApplicationContext</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>ViewContext</managed-bean-name>
		<managed-bean-class>com.jsftemplate.context.ViewContext</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
    
</faces-config>
